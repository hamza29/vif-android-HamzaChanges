<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"

        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/textPadding"
            android:padding="@dimen/textPadding"
            android:src="@drawable/iconfinder_folder_36059" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/menuIv"
            android:layout_toRightOf="@id/iconIv"
            android:padding="@dimen/textPadding"
            android:text="asas" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iconIv"
            android:padding="@dimen/textPadding"
            android:text="Modified: Jan 30" />

        <Switch
            android:id="@+id/menuIv"
            style="@style/MySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:trackTint="#3F51B5"

            android:layout_margin="@dimen/textPadding"
            android:layout_toLeftOf="@id/size"
            android:padding="8dp" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/textPadding"
            android:text="30 MB" />

    </RelativeLayout>


</android.support.v7.widget.CardView>